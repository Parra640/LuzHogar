@model RegistrarPedidoViewModel

<h1>Registrar Pedido Especial</h1>


<form method="post">
  <div class="form-group row">
    <label for="nombre" class="col-sm-2 col-form-label">Nombre</label>
    <div class="col-sm-10">
      <input type="text" asp-for="Nombre" class="form-control" id="nombre" placeholder="Nombre">
    </div>
  </div>
  <div class="form-group row">
    <label for="color" class="col-sm-2 col-form-label">Color</label>
    <div class="col-sm-10">
      <input type="text" asp-for="Color" class="form-control" id="color" placeholder="Color">
    </div>
  </div>
  <div class="form-group">
    <label for="descripcion">Descripci√≥n</label>
    <textarea class="form-control" asp-for="Descripcion" id="descripcion" rows="3"></textarea>
  </div>

  
  <div class="form-row align-items-center">
    <div class="col-auto my-1">
      <label class="mr-sm-2" for="cantidad">Cantidad</label>
      <input class="form-control mr-sm-2" asp-for="Cantidad" id="cantidad">

    </div>
    <div class="col-auto my-1">
      <div class="custom-control custom-checkbox mr-sm-2">
        <input type="checkbox" class="custom-control-input" id="preferencia">
        <label class="custom-control-label" for="preferencia">Recordar mi preferencia</label>
      </div>
    </div>
    <div class="form-group">
        <label asp-for="Foto">Foto:</label>
        <input asp-for="Foto" class="form-control">
    </div>

    <input asp-for="Precio" value="0" hidden>
    <input asp-for="Estado" value="Esperando precio" hidden>

    
    <div class="form-row">
        <button class="btn btn-primary">Realizar Pedido</button>
    </div>
</form>











