@model Mueble

<h1>Actualizar mueble</h1>

<form method="post" asp-controller="mueble" asp-action="ActualizarMueble">
    <div asp-validation-summary="All"></div>

    @if(TempData["mensaje"]!=null){
        <div class='@TempData["tipoTexto"] my-2'>@TempData["mensaje"]</div>
    }

    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Color">Color</label>
        <input asp-for="Color" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Descripcion">Descripci√≥n</label>
        <input asp-for="Descripcion" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Categoria">Categoria</label>
        <select class="form-control" asp-for="CategoriaId">
            @foreach (var item in (List<Categoria>)ViewBag.Categorias)
            {
                var seleccionado="";
                if(Model.CategoriaId==item.Id){
                    seleccionado="selected";
                }
                
                <option value="@item.Id" @seleccionado >@item.Nombre</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Stock">Stock</label>
        <input asp-for="Stock" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Foto">Foto</label>
        <input asp-for="Foto" class="form-control">
    <div class="form-row">
        <button class="btn btn-primary">Actualizar Mueble</button>
    </div>
</form>