@model List<Mueble>

<h1>Seleccionar mueble a actualizar</h1>

<form method="get" asp-action="actualizarmueble">
    <div asp-validation-summary="All"></div>

    @if(TempData["mensaje"]!=null){
        <div class='@TempData["tipoTexto"] my-2'>@TempData["mensaje"]</div>
    }

    <div class="form-group">
        <label >Muebles</label>
        <select class="form-control" name="muebleId">
            @foreach (var item in Model)
            {   
                <option value="@item.Id">@item.Nombre</option>
            }
        </select>
    </div>

    
    <div class="form-row">
        <button class="btn btn-primary">Modificar Mueble Seleccionado</button>
    </div>
</form>