@model CrearCuentaViewModel

<h1>Crear cuenta de usuario</h1>

<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ApePaterno">Apellido Paterno</label>
        <input asp-for="ApePaterno" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="ApeMaterno">Apellido Materno</label>
        <input asp-for="ApeMaterno" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Correo">Email:</label>
        <input asp-for="Correo" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Direccion">Dirección:</label>
        <input asp-for="Direccion" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Referencia">Referencia:</label>
        <input asp-for="Referencia" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Telefono">Teléfono</label>
        <input asp-for="Telefono" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Dni">DNI:</label>
        <input asp-for="Dni" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Password1">Contraseña:</label>
        <input asp-for="Password1" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password2">Confirmar contraseña:</label>
        <input asp-for="Password2" class="form-control">
    </div>
    
    <button class="btn btn-primary">Registrar</button>
</form>