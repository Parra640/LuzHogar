@model CrearCuentaViewModel

<h1>Crear cuenta de usuario</h1>

<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Correo">Email:</label>
        <input asp-for="Correo" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password1">Contraseña:</label>
        <input asp-for="Password1" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password2">Confirmar contraseña:</label>
        <input asp-for="Password2" class="form-control">
    </div>
    
    <button class="btn btn-primary">Registrar</button>
</form>